<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.starpin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StarPin"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".play_lists_tracks_fragment"
            android:exported="false" />
        <activity
            android:name=".PlayListItem"
            android:exported="false" />
        <activity
            android:name=".UserPlayListsFragment"
            android:exported="false" />
        <activity
            android:name=".TopMusicFragment"
            android:exported="false" />
        <activity
            android:name=".track_info_bar"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".TrackItem"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".MainScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>